<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
    <ribbon>
        <tabs>
            <tab idMso="TabCalendar">
                <group id="facebookGroup" label="Facebook">
                    <button id="syncEventsButton" onAction="SyncEventsButtonClick" getEnabled="SyncButtonIsEnabled" label="Synchronise Events" showImage="false" />
                    <button id="calendarConfigButton" onAction="EventConfigButtonClick" label="View Configuration" showImage="false" />
                    <button id="showFacebookEvents" onAction="ShowFacebookEventsClick" label="Show Facebook events" showImage="false" />
                </group>
            </tab>
            <tab idMso="TabContacts">
                <group id="group1" label="Facebook">
                    <button id="syncContactsButton" onAction="SyncContactsButtonClick" label="Synchronise Contacts" showImage="false" />
                    <button id="contactConfigButton" onAction="ContactConfigButtonClick" label="View Configuration" showImage="false" />
                    <button id="showLinkedContacts" onAction="ShowLinkedContactsClick" label="Show Linked Contacts" showImage="false" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>